{% extends "layouts/app.twig" %}

{% block pageTitle %}Личный кабинет соискателя | Опыт работы{% endblock %}

{% set auth = 'true' %}
{% set mobile = 'false' %}

{% block content %}

    <div class="section section__subheader pt60 tab-pt15">
        <div class="container mb5">
            <ul class="breadcrumbs breadcrumbs_list mb10">
                <li class="breadcrubmbs__item">
                    <a class="text-italic fz16 text-without-underline" href="#">Главная</a>
                </li>
                <li class="breadcrubmbs__item">
                    <a class="text-italic fz16 text-without-underline" href="#">Личный кабинет</a>
                </li>
            </ul>
            <div class="announce announce_backing">
                <div class="announce__content">
                    <div class="announce__text text-light fz13 text-uppercase text-white">Чтобы начать поиск кадров вам
                        необходимо заполнить профиль вашей компании
                    </div>
                    <i class="fri fri_announce-content-close"></i>
                </div>
            </div>
        </div>
        <div class="container container_1140">
            <ul class="tab-bar">
                <li class="tab-bar__item">Общие сведения</li>
                <li class="tab-bar__item">Образование</li>
                <li class="tab-bar__item active">Опыт работы</li>
                <li class="tab-bar__item">Доп/спец навыки</li>
                <li class="tab-bar__item">Портфолио</li>
                <li class="tab-bar__item">
                    Вакансии
                    <span class="tab-bar__item-count">5</span>
                </li>
            </ul>
        </div>
    </div>

    <div class="section section__body-with-subheader pt75 pb55">
        <div class="container container_1140">
            <form class="cabinet-applicant-experience">
                <div class="js-current-block-wrapper">
                    <div class="cabinet-box mb15 js-current-block" block="experience">
                        <div class="close-button-gray js-close-box"></div>
                        <div class="grid mb15">
                            <span class="cabinet-input-title flex-align-center mr10">Название компании</span>
                            <input class="input cabinet-employer-main__input input__gray-border input_hover-green input__active-green-border text-italic fz14 text-dark-dull-gray"
                                   type="text" placeholder="Например: Beeline">
                        </div>
                        <div class="grid mb15">
                            <span class="cabinet-input-title flex-align-center mr10">Вид деятельности</span>
                            <select class="select">
                                <option disabled selected>Выберите из списка</option>
                                <option>Пункт 1</option>
                                <option>Пункт 2</option>
                                <option>Пункт 3</option>
                            </select>
                        </div>
                        <div class="grid mb15">
                            <span class="cabinet-input-title flex-align-center mr10">Период работы</span>
                            <span class="text-italic fz14 mr10 flex-align-center">с</span>
                            <input class="input cabinet-employer-main__input input__gray-border input_hover-green input__active-green-border text-italic fz14 text-dark-dull-gray mr15"
                                   type="text" placeholder="месяц">
                            <input class="input cabinet-employer-main__input input__gray-border input_hover-green input__active-green-border text-italic fz14 text-dark-dull-gray mr25"
                                   type="text" placeholder="год">
                            <span class="text-italic fz14 mr10 flex-align-center">по</span>
                            <input class="input cabinet-employer-main__input input__gray-border input_hover-green input__active-green-border text-italic fz14 text-dark-dull-gray mr15"
                                   type="text" placeholder="месяц">
                            <input class="input cabinet-employer-main__input input__gray-border input_hover-green input__active-green-border text-italic fz14 text-dark-dull-gray mr25"
                                   type="text" placeholder="год">
                            <label class="grid green-checkbox cursor-pointer flex-shrink-0 flex-align-center">
                                <input type="checkbox" class="flex-align-center mr10">
                                <span class="text-italic fz14 text-dark-dull-gray flex-align-center">Работаю по сегодняшний день</span>
                            </label>
                        </div>
                        <div class="grid mb15">
                            <span class="cabinet-input-title flex-align-center mr10">Должность</span>
                            <input class="input cabinet-employer-main__input input__gray-border input_hover-green input__active-green-border text-italic fz14 text-dark-dull-gray"
                                   type="text" placeholder="Например: главный бухгалтер">
                        </div>
                        <div class="grid mb15">
                            <span class="cabinet-input-title mr10">Краткое описание обязанностей</span>
                            <textarea class="textarea" placeholder="Чем вам приходилось заниматься на работе"></textarea>
                        </div>
                        <div class="grid mb15">
                            <span class="cabinet-input-title mr10">Доп. сведения</span>
                            <textarea class="textarea" placeholder="Дополните информацию, если это необходимо"></textarea>
                        </div>
                    </div>
                </div>
                <div class="grid flex-centered mb30">
                    <div class="add-vacancy js-add-new-block" block-add="experience">
                        <span class="add-vacancy__icon mr20"></span>
                        <span class="add-vacancy__text text-medium fz14 text-green text-uppercase">Ещё одно место работы?</span>
                    </div>
                </div>
                <p class="text-center mt17 mb17">
                    <button class="button button_green button_save-changes">Сохранить изменения</button>
                </p>
            </form>
        </div>
    </div>


{% endblock %}