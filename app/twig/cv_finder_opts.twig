{% extends "layouts/app.twig" %}

{% block pageTitle %}Расширенный поиск резюме{% endblock %}

{% set auth = 'true' %}

{% block content %}

    <div class="section section__order-employer-header">
        <div class="container">
            <ul class="breadcrumbs pl265 mb10">
                <li class="breadcrubmbs__item">
                    <a class="text-italic fz16 text-without-underline" href="#">Главная</a>
                </li>
                <li class="breadcrubmbs__item">
                    <a class="text-italic fz16 text-without-underline" href="#">Личный кабинет</a>
                </li>
                <li class="breadcrubmbs__item">
                    <a class="text-italic fz16 text-without-underline" href="#">Оплата заказа</a>
                </li>
            </ul>
            <div class="announce announce_backing">
                <div class="announce__content">
                    <div class="announce__text text-light fz13 text-uppercase text-white">Тариф такой-то такой-то активен еще 10 дней, не забывайте обновлять подписку</div>
                    <i class="fri fri_announce-content-close"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="section section__cv-finder">
        <div class="container container_800">
            <div class="cv-finder">
                <p class="cv-finder__title fz18 text-medium text-uppercase mb40">Поиск по вакансиям</p>
                <form>
                    <div class="cv-finder-grid mb30">
                        <div class="cv-finder-grid__left flex-align-center text-italic fz14 mr20">
                            Название вакансии
                        </div>
                        <div class="cv-finder-grid__right">
                            <div class="default-select mr10">
                                <select class="">
                                    <option class="text-dull-gray" disabled selected>Выберите из списка</option>
                                    <option>Дизайнер</option>
                                    <option>Бариста</option>
                                    <option>Продавец вейпов</option>
                                    <option>Дегустатор маффинов</option>
                                </select>
                            </div>
                            <div class="round-loupe"><i class="fri_search-button-loupe-17x18"></i></div>
                        </div>
                    </div>
                    <div class="cv-finder-grid mb30">
                        <div class="cv-finder-grid__left flex-align-center text-italic fz14 mr20">
                            Город
                        </div>
                        <div class="cv-finder-grid__right">
                            <div class="default-select">
                                <select class="">
                                    <option class="text-dull-gray" disabled selected>Выберите город</option>
                                    <option>Алматы</option>
                                    <option>Астана</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="cv-finder-grid mb30">
                        <div class="cv-finder-grid__left flex-align-center text-italic fz14 mr20">
                            Уровень зарплаты
                        </div>
                        <div class="cv-finder-grid__right tab-flex-column">
                            <div class="cv-finder-grid__salary tab-mb20">
                                <span class="cv-finder-grid__salary-label mr10">От</span>
                                <input class="cv-finder-grid__salary-input default-input mr15" type="text">
                                <span class="cv-finder-grid__salary-label mr10">До</span>
                                <input class="cv-finder-grid__salary-input default-input mr30 tab-mr0" type="text">
                            </div>
                            <div class="cv-finder-grid__currency">
                                <span class="cv-finder-grid__salary-label mr15">Валюта</span>
                                <div class="default-select">
                                    <select class="">
                                        <option class="text-dull-gray" disabled selected>Выберите валюту</option>
                                        <option>Тенге</option>
                                        <option>Доллары</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="cv-finder-grid mb30">
                        <div class="cv-finder-grid__left flex-align-center text-italic fz14 mr20">
                            Вид деятельности компании
                        </div>
                        <div class="cv-finder-grid__right">
                            <div class="default-select">
                                <select>
                                    <option class="text-dull-gray" disabled selected>Выберите из списка</option>
                                    <option>Горная добыча</option>
                                    <option>Разработка ПО</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="cv-finder-grid mb30">
                        <div class="cv-finder-grid__left flex-align-start text-italic fz14 mr20">
                            Тип занятости
                        </div>
                        <div class="cv-finder-grid__right flex-wrap">
                            <div class="cv-finder__line radio-buttons radio_green-dot mb20">
                                <input class="radio" type="radio" name="workdays" id="workday1">
                                <label class="text-italic fz14" for="workday1">Полный рабочий день (5/2)</label>
                            </div>
                            <div class="cv-finder__line radio-buttons radio_green-dot mb20">
                                <input class="radio" type="radio" name="workdays" id="workday2">
                                <label class="text-italic fz14" for="workday2">Полный рабочий день (6/1)</label>
                            </div>
                            <div class="cv-finder__line radio-buttons radio_green-dot mb20">
                                <input class="radio" type="radio" name="workdays" id="workday3">
                                <label class="text-italic fz14" for="workday3">Частичная занятость (график устанавливается работодателем)</label>
                            </div>
                            <div class="cv-finder__line radio-buttons radio_green-dot mb20">
                                <input class="radio" type="radio" name="workdays" id="workday4">
                                <label class="text-italic fz14" for="workday4">Сменная работа (график устанавливается работодателем)</label>
                            </div>
                            <div class="cv-finder__line radio-buttons radio_green-dot mb20">
                                <input class="radio" type="radio" name="workdays" id="workday5">
                                <label class="text-italic fz14" for="workday5">Вахтовый метод</label>
                            </div>
                            <div class="cv-finder__line radio-buttons radio_green-dot mb20">
                                <input class="radio" type="radio" name="workdays" id="workday6">
                                <label class="text-italic fz14" for="workday6">Дистанционная работа</label>
                            </div>
                            <div class="cv-finder__line radio-buttons radio_green-dot mb20">
                                <input class="radio" type="radio" name="workdays" id="workday7">
                                <label class="text-italic fz14" for="workday7">Надомная работа</label>
                            </div>
                            <div class="cv-finder__line radio-buttons radio_green-dot mb20">
                                <input class="radio" type="radio" name="workdays" id="workday8">
                                <label class="text-italic fz14" for="workday8">Временная работа</label>
                            </div>
                            <div class="cv-finder__line radio-buttons radio_green-dot mb20">
                                <input class="radio" type="radio" name="workdays" id="workday9">
                                <label class="text-italic fz14" for="workday9">Стажировка</label>
                            </div>
                        </div>
                    </div>
                    <div class="cv-finder-grid mb30">
                        <div class="cv-finder-grid__left flex-align-start text-italic fz14 mr20">
                            Требуемый опыт работы
                        </div>
                        <div class="cv-finder-grid__right flex-wrap">
                            <div class="cv-finder__line radio-buttons radio_gray-dot mb20">
                                <input class="radio" type="radio" name="experience" id="exp1">
                                <label class="text-italic fz14" for="exp1">Не важно</label>
                            </div>
                            <div class="cv-finder__line radio-buttons radio_gray-dot mb20">
                                <input class="radio" type="radio" name="experience" id="exp2">
                                <label class="text-italic fz14" for="exp2">Без опыта</label>
                            </div>
                            <div class="cv-finder__line radio-buttons radio_gray-dot mb20">
                                <input class="radio" type="radio" name="experience" id="exp3">
                                <label class="text-italic fz14" for="exp3">До 1 года</label>
                            </div>
                            <div class="cv-finder__line radio-buttons radio_gray-dot mb20">
                                <input class="radio" type="radio" name="experience" id="exp4">
                                <label class="text-italic fz14" for="exp4">1-3 года</label>
                            </div>
                            <div class="cv-finder__line radio-buttons radio_gray-dot mb20">
                                <input class="radio" type="radio" name="experience" id="exp5">
                                <label class="text-italic fz14" for="exp5">3-5 лет</label>
                            </div>
                            <div class="cv-finder__line radio-buttons radio_gray-dot mb20">
                                <input class="radio" type="radio" name="experience" id="exp6">
                                <label class="text-italic fz14" for="exp6">5-10 лет</label>
                            </div>
                            <div class="cv-finder__line radio-buttons radio_gray-dot mb20">
                                <input class="radio" type="radio" name="experience" id="exp7">
                                <label class="text-italic fz14" for="exp7">Более 10 лет</label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}