{% extends "layouts/app.twig" %}

{% block pageTitle %}Результаты поиска | Вакансии{% endblock %}

{% set auth = 'true' %}

{% block content %}

    <div class="section section__content-search">
        <div class="container container_1280">
            <div class="banner pb20">
                <img src="images/banner-top-760x90.jpg" alt="">
            </div>
            <div class="search-vacancies">
                <div class="filter">
                    <div class="filter__line mb15">
                        <div class="text-italic fz18">Вакансии</div>
                    </div>
                    <div class="filter__line mb7">
                        <input class="filter__input text-italic" type="text" placeholder="Инженер">
                        <i class="filter-remove-input"></i>
                    </div>
                    <div class="filter__line mb7">
                        <input class="filter__input text-italic" type="text" placeholder="Инженер-технолог">
                        <i class="filter-remove-input"></i>
                    </div>
                    <div class="filter__line mb20 pl20">
                        <i class="filter-add-input"></i>
                    </div>
                    <div class="filter__line mb15">
                        <div class="text-italic fz18">Город</div>
                    </div>
                    <div class="filter__line mb7">
                        <input class="filter__input text-italic" type="text" placeholder="Алматы">
                        <i class="filter-remove-input"></i>
                    </div>
                    <div class="filter__line mb7">
                        <input class="filter__input text-italic" type="text" placeholder="Атырау">
                        <i class="filter-remove-input"></i>
                    </div>
                    <div class="filter__line mb15 pl20">
                        <i class="filter-add-input"></i>
                    </div>
                    <div class="filter__line filter__line_justify-start filter__line_align-baseline cursor-pointer mb15">
                        <div class="text-italic fz18 mr5">Образование</div>
                        <i class="filter-show-input"></i>
                    </div>
                    <div class="filter__line cursor-pointer mb7 pl20">
                        <div class="text-italic fz14 text-dark-dull-gray">Высшее</div>
                        <i class="filter-remove-input"></i>
                    </div>
                    <div class="filter__line mb20 pl20">
                        <i class="filter-add-input"></i>
                    </div>
                    <div class="filter__line filter__line_justify-start filter__line_align-baseline cursor-pointer mb15">
                        <div class="text-italic fz18 mr5">Зарплата</div>
                        <i class="filter-show-input"></i>
                    </div>
                    <div class="filter__line mb7">
                        <div class="filter__line filter__line_justify-start">
                            <input class="filter__input filter__input_salary text-italic mr5" type="text" placeholder="100.000">
                            <span class="mr5 text-dark-dull-gray">-</span>
                            <input class="filter__input filter__input_salary text-italic" type="text" placeholder="150.000">
                        </div>
                        <i class="filter-remove-input"></i>
                    </div>
                    <div class="filter__line filter__line_justify-start mb20">
                        <div class="filter__select-currency text-italic mr5">
                            <select class="text-dull-gray text-italic">
                                <option>KZT</option>
                                <option>USD</option>
                            </select>
                        </div>
                        <i class="filter-add-input"></i>
                    </div>
                    <div class="filter__line filter__line_justify-start filter__line_align-baseline cursor-pointer mb15">
                        <div class="text-italic fz18 mr5">Вид деятельности</div>
                        <i class="filter-show-input"></i>
                    </div>
                    <div class="filter__line mb20">
                        <input class="filter__input text-italic" type="text" placeholder="Программирование">
                        <i class="filter-remove-input"></i>
                    </div>
                    <div class="filter__line filter__line_justify-start filter__line_align-baseline cursor-pointer mb15">
                        <div class="text-italic fz18 mr5">Тип занятости</div>
                        <i class="filter-show-input"></i>
                    </div>
                    <div class="filter__line cursor-pointer mb5 pl20">
                        <div class="text-italic fz14 text-dark-dull-gray">Полный рабочий день (5/2)</div>
                        <i class="filter-remove-input"></i>
                    </div>
                    <div class="filter__line cursor-pointer mb7 pl20">
                        <div class="text-italic fz14 text-dark-dull-gray">Полный рабочий день (6/1)</div>
                        <i class="filter-remove-input"></i>
                    </div>
                    <div class="filter__line mb15 pl20">
                        <i class="filter-add-input"></i>
                    </div>
                    <div class="filter__line filter__line_justify-start filter__line_align-baseline cursor-pointer mb15">
                        <div class="text-italic fz18 mr5">Опыт работы</div>
                        <i class="filter-show-input"></i>
                    </div>
                    <div class="filter__line cursor-pointer mb7 pl20">
                        <div class="text-italic fz14 text-dark-dull-gray">3-5 лет</div>
                        <i class="filter-remove-input"></i>
                    </div>
                    <div class="filter__line pl20">
                        <i class="filter-add-input"></i>
                    </div>
                </div>
                <div class="results">
                    <ul class="breadcrumbs mb25 pl40">
                        <li class="breadcrubmbs__item">
                            <a class="text-italic fz16 text-without-underline" href="#">Главная</a>
                        </li>
                        <li class="breadcrubmbs__item">
                            <a class="text-italic fz16 text-without-underline" href="#">Раширенный поиск</a>
                        </li>
                        <li class="breadcrubmbs__item">
                            <a class="text-italic fz16 text-without-underline" href="#">Результаты поиска</a>
                        </li>
                    </ul>
                    <p class="search__results medium-title fz24 text-uppercase mb30">Результаты поиска</p>
                    <div class="search-wrapper pl20 mb45">
                        <a class="search-grid" href="#">
                            <div class="search-grid__item-image">
                                <div class="search-grid__image-wrapper">
                                    <img class="search-grid__image" src="images/article-1.jpg" alt="">
                                </div>
                            </div>
                            <div class="search-grid__item-description">
                                <div class="search-description">
                                    <div class="search-description__name text-medium fz18 text-uppercase text-signal-black">Инженер-технолог</div>
                                    <div class="search-description__company text-light fz16 text-uppercase text-signal-black mb7">АО "K-Cell"</div>
                                    <div class="search-description__description text-italic fz14 ">Мы ищем идеального<br> сотрудника, которого нет</div>
                                </div>
                            </div>
                            <div class="search-grid__item-salary text-light fz18 text-uppercase lts1">100 000 KZT</div>
                        </a>
                        <a class="search-grid" href="#">
                            <div class="search-grid__item-image">
                                <div class="search-grid__image-wrapper">
                                    <img class="search-grid__image" src="images/default-logo.png" alt="">
                                </div>
                            </div>
                            <div class="search-grid__item-description">
                                <div class="search-description">
                                    <div class="search-description__name text-medium fz18 text-uppercase text-signal-black">Инженер-технолог</div>
                                    <div class="search-description__company text-light fz16 text-uppercase text-signal-black mb7">АО "K-Cell"</div>
                                    <div class="search-description__description text-italic fz14 ">Мы ищем идеального<br> сотрудника, которого нет</div>
                                </div>
                            </div>
                            <div class="search-grid__item-salary text-light fz18 text-uppercase lts1">100 000 KZT</div>
                        </a>
                    </div>
                    <div class="interesting pl150">
                        <div class="interesting__title text-uppercase text-light fz18 lts2 mb40">Возможно, вас заинтересует также</div>
                        <div class="interesting__grid interesting-grid">
                            <div class="interesting-grid__item">
                                <p class="text-italic fz14"><a class="text-without-underline" href="#">Технолог (15)</a></p>
                                <p class="text-italic fz14"><a class="text-without-underline" href="#">Слесарь (4)</a></p>
                                <p class="text-italic fz14"><a class="text-without-underline" href="#">Сантеник (43)</a></p>
                            </div>
                            <div class="interesting-grid__item">
                                <p class="text-italic fz14"><a class="text-without-underline" href="#">Программист (8)</a></p>
                                <p class="text-italic fz14"><a class="text-without-underline" href="#">Верстальщик (14)</a></p>
                                <p class="text-italic fz14"><a class="text-without-underline" href="#"></a>Лесоруб (13)</p>
                            </div>
                            <div class="interesting-grid__item">
                                <p class="text-italic fz14"><a class="text-without-underline" href="#">Юрист (8)</a></p>
                                <p class="text-italic fz14"><a class="text-without-underline" href="#">Коллектор (14)</a></p>
                                <p class="text-italic fz14"><a class="text-without-underline" href="#">Судебный пристав (13)</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}