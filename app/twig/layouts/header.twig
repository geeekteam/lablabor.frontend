<header class="header pt15 pb15">
    <div class="container">
        <div class="header-inner">
            <div class="header-inner__left mr30">
                <div class="logo mr30">
                    <a class="logo__link" href="/"><i class="logo-new"></i></a>
                </div>
                <div class="desktop-main-menu">
                    <ul class="main-menu">
                        <li class="main-menu__item"><a class="main-menu__item-link text-without-underline" href="#">Прайс-лист</a></li>
                        <li class="main-menu__item"><a class="main-menu__item-link text-without-underline" href="#">Помощь</a></li>
                        <li class="main-menu__item"><a class="main-menu__item-link text-without-underline" href="#">Договор-оферта</a></li>
                    </ul>
                </div>
            </div>
            <div class="header-inner__right">
                <div class="header-search mr30">
                    <div class="header-search__left">
                        <form class="inputs-header">
                            <input class="inputs-header__input text-dull-gray text-italic" type="text" placeholder="Введите запрос">
                            <div class="inputs-header__select">
                                <select class="text-dull-gray text-italic">
                                    <option>Вакансии</option>
                                    <option>Работодатели</option>
                                </select>
                            </div>
                            <div class="inputs-header__search-button button button_green">
                                <i class="inputs-header__search-button-loupe"></i>
                            </div>
                        </form>
                    </div>
                    <div class="header-search__right">
                        <a class="fz14 text-dull-gray text-italic text-without-underline" href="#">Расширенный поиск</a>
                    </div>
                </div>
                {% if auth == 'false' %}

                <div class="header-login">
                    <span class="js-open-popup header__button-login button button_green" data-open-popup="login-bar">Войти</span>
                    <div class="js-popup header-login__dropdown" data-popup="login-bar">
                        <form class="header-login__form header-login-form">
                            <div class="mb10">
                                <input placeholder="Email или тел. номер"
                                       class="header-login-form__input input text-light-gray text-italic"
                                       type="text">
                            </div>
                            <div class="mb15">
                                <input placeholder="Пароль"
                                       class="header-login-form__input input text-light-gray text-italic"
                                       type="text">
                            </div>
                            <div>
                                <button class="header-login-form__button button button_empty-green" type="submit">Вход
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            {% else %}
            <div class="header-login">
                <span class="js-open-popup header-login__avatar" data-open-popup="user-menu">
                    <i class="user-avatar"></i>
                    <div class="header-login__avatar-statistic">5</div>
                </span>
                <div class="js-popup header-login__dropdown" data-popup="user-menu">
                    <ul class="user-menu">
                        <li class="user-menu__item"><a class="fz14 text-italic" href="#">Личный кабинет</a></li>
                        <li class="user-menu__item"><a class="fz14 text-italic" href="#">Настройки</a></li>
                        <li class="user-menu__item"><a class="fz14 text-italic" href="#">Статистика<div class="user-menu__item-statistic">+5</div></a></li>
                        <li class="user-menu__item"><a class="fz14 text-italic" href="#">Выход</a></li>
                    </ul>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</header>