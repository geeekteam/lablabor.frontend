<header class="header pt15 pb15">
    <div class="container">
        <div class="header__inner">
            <div class="logo mr30">
                <a class="logo__link" href="/"><img class="logo__image" src="images/logo.png" alt=""></a>
            </div>
            <ul class="main-menu mr30">
                <li class="main-menu__item"><a class="main-menu__item-link" href="#" class="">Прайс-лист</a></li>
                <li class="main-menu__item"><a class="main-menu__item-link" href="#" class="">Помощь</a></li>
                <li class="main-menu__item"><a class="main-menu__item-link" href="#" class="">Договор-оферта</a></li>
            </ul>
            <form action="#" class="search mr30">
                <div class="input input__header">
                    <input class="light-gray-text italic" type="text" placeholder="Введите запрос">
                </div>
                <div class="selectbox selectbox__header">
                    <select class="light-gray-text italic">
                        <option>Вакансии</option>
                        <option>Работодатели</option>
                    </select>
                </div>
                <div class="search__button button button_green mr10">
                    <i class="search__loupe"></i>
                </div>
                <p class="search__advanced-search light-gray-text italic"><a href="#">Расширенный поиск</a></p>
            </form>
            <div class="header-login">
                <a href="#" class="header__button-login button button_green">Войти</a>
                <div class="header-login__dropdown hidden">
                    <form class="header-login__form header-login-form">
                        <div class="mb10">
                            <input placeholder="Email или тел. номер"
                                   class="header-login-form__input input light-gray-text italic"
                                   type="text">
                        </div>
                        <div class="mb15">
                            <input placeholder="Пароль"
                                   class="header-login-form__input input light-gray-text italic"
                                   type="text">
                        </div>
                        <div>
                            <button class="header-login-form__button button button_empty-green" type="submit">Вход
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</header>