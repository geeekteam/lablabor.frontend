{% extends "layouts/app.twig" %}

{% block pageTitle %}Личный кабинет работодателя | Вакансии{% endblock %}

{% set auth = 'true' %}

{% block content %}

    <div class="section section__subheader pt60 tab-pt15">
        <div class="container mb5">
            <ul class="breadcrumbs breadcrumbs_list mb10">
                <li class="breadcrubmbs__item">
                    <a class="text-italic fz16 text-without-underline" href="#">Главная</a>
                </li>
                <li class="breadcrubmbs__item">
                    <a class="text-italic fz16 text-without-underline" href="#">Личный кабинет</a>
                </li>
            </ul>
            <div class="announce announce_backing">
                <div class="announce__content">
                    <div class="announce__text text-light fz13 text-uppercase text-white">Чтобы начать поиск кадров вам
                        необходимо заполнить профиль вашей компании
                    </div>
                    <i class="fri fri_announce-content-close"></i>
                </div>
            </div>
        </div>
        <div class="container container_1140">
            <ul class="tab-bar">
                <li class="tab-bar__item">Общие сведения</li>
                <li class="tab-bar__item active">Вакансии</li>
                <li class="tab-bar__item">Оплата</li>
                <li class="tab-bar__item tab-tab__item_small tab-bar__item_blue"><i class="fri fri_practice"></i></li>
            </ul>
        </div>
    </div>

    <div class="section section__body-with-subheader pt40 pb55">
        <div class="container container_1140">
            <div class="vacancy-list">
                <div class="vacancy-list__item">
                    <div class="checkbox-switcher-wrapper">
                        <label>
                            <div class="checkbox-switcher">
                                <input class="mr25 my-checkbox" type="checkbox">
                                <span class="checkbox-switcher__label">Название вакансии</span>
                            </div>
                        </label>
                    </div>
                    <div class="vacancy-list__salary">200.000-250.000 тг</div>
                    <i class="fri fri_edit"></i>
                    <i class="fri fri_remove js-open-popup" data-open-popup="delete-vacancy"></i>
                    <div class="vacancy-list__statistic">Статистика вакансии</div>
                    <div class="vacancy-list__statistic-count">5</div>
                </div>
                <div class="vacancy-list__item">
                    <div class="checkbox-switcher-wrapper">
                        <label>
                            <div class="checkbox-switcher">
                                <input class="mr25 my-checkbox" type="checkbox">
                                <span class="checkbox-switcher__label">Другая вакансия</span>
                            </div>
                        </label>
                    </div>
                    <div class="vacancy-list__salary">210.000-260.000 тг</div>
                    <i class="fri fri_edit"></i>
                    <i class="fri fri_remove js-open-popup" data-open-popup="delete-vacancy"></i>
                    <div class="vacancy-list__statistic">Статистика вакансии</div>
                </div>
            </div>
            <form action="">
                <div class="js-current-block-wrapper mb25">
                    <div class="cabinet-employer-vacancy js-current-block" block="vacancy">
                        <div class="close-button-gray"></div>
                        <div class="cabinet-employer-vacancy__grid">
                            <div class="cabinet-employer-vacancy-grid">
                                <div class="cabinet-employer-vacancy-grid__left">
                                    <span class="text-italic fz14 text-signal-black">Вакансия</span>
                                </div>
                                <div class="cabinet-employer-vacancy-grid__right">
                                    <select class="select select_hover-green">
                                        <option disabled selected>Выберите из списка</option>
                                        <option>Пункт 1</option>
                                        <option>Пункт 2</option>
                                        <option>Пункт 3</option>
                                    </select>
                                </div>
                            </div>
                            <div class="cabinet-employer-vacancy-grid">
                                <div class="cabinet-employer-vacancy-grid__left">
                                    <span class="text-italic fz14 text-signal-black">Уровень зарплаты</span>
                                </div>
                                <div class="cabinet-employer-vacancy-grid__right">
                                    <input class="input input__gray-border input_hover-green input__active-green-border text-italic fz14 text-dark-dull-gray cabinet-employer-vacancy__salary-input"
                                           type="text" placeholder="Введите число">
                                    <span class="text-italic fz14 text-signal-black mr5">валюта</span>
                                    <select class="select select_hover-green select_currency">
                                        <option disabled selected>KZT</option>
                                        <option>Пункт 1</option>
                                        <option>Пункт 2</option>
                                        <option>Пункт 3</option>
                                    </select>
                                </div>
                            </div>
                            <div class="cabinet-employer-vacancy-grid">
                                <div class="cabinet-employer-vacancy-grid__left">
                                    <span class="text-italic fz14 text-signal-black">Опыт работы</span>
                                </div>
                                <div class="cabinet-employer-vacancy-grid__right">
                                    <input class="input input__gray-border input_hover-green input__active-green-border text-italic fz14 text-dark-dull-gray"
                                           type="text" placeholder="Укажите опыт работы">
                                </div>
                            </div>
                            <div class="cabinet-employer-vacancy-grid">
                                <div class="cabinet-employer-vacancy-grid__left">
                                    <span class="text-italic fz14 text-signal-black">Город</span>
                                </div>
                                <div class="cabinet-employer-vacancy-grid__right">
                                    <select class="select select_hover-green">
                                        <option disabled selected>Выберите из списка</option>
                                        <option>Пункт 1</option>
                                        <option>Пункт 2</option>
                                        <option>Пункт 3</option>
                                    </select>
                                </div>
                            </div>
                            <div class="cabinet-employer-vacancy-grid">
                                <div class="cabinet-employer-vacancy-grid__left">
                                    <span class="text-italic fz14 text-signal-black">Образование</span>
                                </div>
                                <div class="cabinet-employer-vacancy-grid__right">
                                    <input class="input input__gray-border input_hover-green input__active-green-border text-italic fz14 text-dark-dull-gray"
                                           type="text" placeholder="Высшее/Средне-специальное/Среднее">
                                </div>
                            </div>
                            <div class="cabinet-employer-vacancy-grid">
                                <div class="cabinet-employer-vacancy-grid__left">
                                    <span class="text-italic fz14 text-signal-black">Тип занятости</span>
                                </div>
                                <div class="cabinet-employer-vacancy-grid__right">
                                    <select class="select select_hover-green">
                                        <option disabled selected>Выберите из списка</option>
                                        <option>Пункт 1</option>
                                        <option>Пункт 2</option>
                                        <option>Пункт 3</option>
                                    </select>
                                </div>
                            </div>
                            <div class="cabinet-employer-vacancy-grid">
                                <div class="cabinet-employer-vacancy-grid__left flex-align-start">
                                    <span class="text-italic fz14 text-signal-black">Специальные знания и навыки</span>
                                </div>
                                <div class="cabinet-employer-vacancy-grid__right">
                                    <textarea class="textarea"
                                              placeholder="Опишите требования к кандидату на должность"></textarea>
                                </div>
                            </div>
                            <div class="cabinet-employer-vacancy-grid">
                                <div class="cabinet-employer-vacancy-grid__left flex-align-start">
                                    <span class="text-italic fz14 text-signal-black">Условия труда/<br>Доп. сведения</span>
                                </div>
                                <div class="cabinet-employer-vacancy-grid__right">
                                    <textarea class="textarea"
                                              placeholder="Опишите условия, на которых будет работать сотрудник"></textarea>
                                </div>
                            </div>
                            <div class="cabinet-employer-vacancy-grid flex-space-between">
                                <div class="checkbox-switcher-wrapper">
                                    <label>
                                        <div class="checkbox-switcher checkbox-switcher_span-switcher">
                                            <input class="mr10 my-checkbox" type="checkbox" checked>
                                            <span class="fz12 text-light text-uppercase text-green js-open-hint">Вакансия активна</span>
                                        </div>
                                    </label>
                                    <div class="cabinet-employer-hint js-hint">
                                        <p class="text-white fz12 text-italic">Чтобы активировать или деактивировать вакансию, кликните по ползунку.</p>
                                    </div>
                                    <div class="cabinet-employer-activate-hint">
                                        <i class="fri fri_exclamation-green mr10"></i>
                                        <p class="fz12 text-italic">Превышено количество вакансий, доступных для активации. Чтобы ее активировать, Вам нужно деактивировать другую вакансию или выбрать другой абонентский пакет. </p>
                                    </div>
                                </div>
                                <div class="grid cabinet-employer-vacancy-grid__statistic">
                                    <span class="cabinet-employer-vacancy-grid__statistic-text mr10">Статистика вакансии</span>
                                    <span class="cabinet-employer-vacancy-grid__statistic-count">5</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="grid flex-centered">
                    <div class="add-vacancy js-add-new-block" block-add="vacancy">
                        <span class="add-vacancy__icon mr20"></span>
                        <span class="add-vacancy__text text-medium fz14 text-green text-uppercase">Добавить вакансию</span>
                    </div>
                </div>
                <p class="text-center mt17 mb17">
                    <span class="button button_green button_save-changes">Сохранить изменения</span>
                </p>
            </form>
            <div class="pagination text-center">
                <a href="#" class="pagination__prev"></a>

                <a href="#" class="pagination-items__item fz18 text-medium">1</a>
                <a href="#" class="pagination-items__item fz18 text-medium">2</a>
                <a href="#" class="pagination-items__item fz18 text-medium">3</a>
                <a href="#" class="pagination-items__item fz18 text-medium">4</a>
                <a href="#" class="pagination-items__item fz18 text-medium">5</a>
                <a href="#" class="pagination-items__item fz18 text-medium">6</a>
                <a href="#" class="pagination-items__item fz18 text-medium">7</a>
                <a href="#" class="pagination-items__item fz18 text-medium">8</a>
                <a href="#" class="pagination-items__item fz18 text-medium">9</a>
                <a href="#" class="pagination-items__item fz18 text-medium">10</a>

                <a href="#" class="pagination__next"></a>
            </div>
        </div>
    </div>

{% endblock %}